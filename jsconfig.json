{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "paths": {
      "@src/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@store/*": ["src/store/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@i18n/*": ["src/i18n/*"],
      "@icons/*": ["src/icons/*"],
      "@assets/*": ["src/assets/*"],
      "@common/*": ["src/common/*"],
      "@hooks/*": ["src/hooks/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}